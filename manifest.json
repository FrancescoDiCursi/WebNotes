{
	"manifest_version" : 3,
	"name" : "Chrome notes",
	"version" : "0.001",
	"permissions":[
        "webRequest",
        "scripting",
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "storage"
    ],
    "web_accessible_resources": [
        {
          "resources": [ "post-it.png" ],
          "matches": [ "<all_urls>" ]
        }
    ],
    "host_permissions":[
        "<all_urls>"
    ],
    "background":{
        "service_worker":"background.js"
    }
    ,
    "action" : {
        "default_icon":"icons8-note-100.png",
        "default_popup":"popup.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
    ,
    "icons":{
        "16":"icons8-note-100.png",
        "48":"icons8-note-100.png",
        "128":"icons8-note-100.png"
    },
    "description": "Create notes by hand or by highlighting text on websites. Find notes easy using the filtering system. Extract tags from text."
    
}